{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "paths": {
    "@/*": ["./*"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.d.ts",
    "docs",
    "node_modules",
    ".history",
    ".git",
    ".github",
    "<node_internals>/**"
  ]
}
